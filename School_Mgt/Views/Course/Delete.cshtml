@model School_Mgt.Models.Course

@{
    ViewBag.Title = "Delete";
}

<div class="alert alert-danger">
    <h6>Are you sure you want to delete this?</h6>
</div>

<div class="card">
    <div class="card-header">
        <h5> Delete Course</h5>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CourseName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CourseName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CourseUnit)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CourseUnit)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Grade)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Grade)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Score)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Score)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.GradeUnit)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.GradeUnit)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Cumulative)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cumulative)
            </dd>
        </dl>

        @using (Html.BeginForm("DeleteConfirmed", "Course", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CourseId)
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger btn-sm rounded-0" />
                @Html.ActionLink("Back to List", "Index", "Course", new { @class = "btn btn-sm btn-primary rounded-0" })
            </div>
        }
    </div>
