@model School_Mgt.Models.Student

@{
    ViewBag.Title = "Edit";
  
    <div class="card">
        <div class="card-header">
            <h3>Edit Student</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.StudentId)
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName)
                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName)
                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BirthDate)
                    @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.BirthDate)
                </div>
                //<div class="form-group">
                //    @Html.HiddenFor(m => m.DepartmentId, new { htmlAttributes = new { @class = "form-control" } })
                //    @Html.ValidationMessageFor(m => m.DepartmentId)
                //</div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Department)
                    @Html.EditorFor(m => m.Department.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Department.DepartmentName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address)
                    @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Address)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber)
                    @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-primary rounded-0">Update</button>
                    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-sm btn-primary rounded-0" })
                </div>
            }
        </div>
    </div>
}
